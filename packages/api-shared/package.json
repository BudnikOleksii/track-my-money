{
  "name": "@track-my-money/api-shared",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "pnpm build --watch",
    "build": "tsc -b -v",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "type-check": "tsc --noEmit --incremental false"
  },
  "main": "./dist/entry.js",
  "types": "./dist/entry.d.ts",
  "files": [
    "./dist/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/entry.js",
      "require": "./dist/entry.js"
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.js"
    }
  },
  "dependencies": {
    "@nestjs/mapped-types": "*",
    "@track-my-money/database": "workspace:*",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2"
  },
  "devDependencies": {
    "@track-my-money/eslint-config": "workspace:*",
    "@track-my-money/typescript-config": "workspace:*",
    "@types/node": "24.10.0",
    "eslint": "9.38.0",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.2",
    "typescript": "5.8.2"
  }
}
